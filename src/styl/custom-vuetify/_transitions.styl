.slide-x-enter-active, .slide-x-leave-active {
  transition: transform $primary-transition
}
.slide-x-enter, .slide-x-leave-to /* .fade-leave-active below version 2.1.8 */ {
  transform: translate(-400px,0);
}

.fade-enter-active, .fade-leave-active {
  transition: opacity $primary-transition
}
.fade-enter, .fade-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0
}

slide-x($x, $prefix)
  .{$prefix}-slide-x-enter-active, .{$prefix}-slide-x-leave-active
    transition: transform .4s
  .{$prefix}-slide-x-enter, .{$prefix}-slide-x-leave-to
    transform: translate($x,0);